<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/applogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/applogo"
        android:supportsRtl="true"
        android:enableOnBackInvokedCallback="true">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.GYM4EVERY1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".routes.auth_routes.NewPasswordActivity"
            android:exported="true"
            android:theme="@style/Theme.GYM4EVERY1" />
        <activity
            android:name=".routes.auth_routes.ForgotPasswordActivity"
            android:exported="true"
            android:theme="@style/Theme.GYM4EVERY1" />
        <activity
            android:name=".routes.auth_routes.AuthHomeActivity"
            android:exported="true"
            android:theme="@style/Theme.GYM4EVERY1" />
        <activity
            android:name=".routes.auth_routes.SignInActivity"
            android:exported="true"
            android:theme="@style/Theme.GYM4EVERY1" />
        <activity
            android:name=".routes.auth_routes.SignUp1Activity"
            android:exported="true"
            android:theme="@style/Theme.GYM4EVERY1" />
        <activity
            android:name=".routes.auth_routes.SignUp2Activity"
            android:exported="true"
            android:theme="@style/Theme.GYM4EVERY1" />
        <activity
            android:name=".routes.start_routes.GetStartedActivity"
            android:exported="true"
            android:theme="@style/Theme.GYM4EVERY1" />
        <activity
            android:name=".routes.start_routes.FirstQuestionPageActivity"
            android:exported="true"
            android:theme="@style/Theme.GYM4EVERY1" />
        <activity
            android:name=".routes.start_routes.SecondQuestionPageActivity"
            android:exported="true"
            android:theme="@style/Theme.GYM4EVERY1" />
        <activity
            android:name=".routes.start_routes.ThirdQuestionPageActivity"
            android:exported="true"
            android:theme="@style/Theme.GYM4EVERY1" />
        <activity
            android:name=".routes.auth_routes.VerificationSuccessActivity"
            android:exported="true"
            android:theme="@style/Theme.GYM4EVERY1" />

    </application>
